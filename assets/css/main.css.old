/* ==========================================================================
   Main Stylesheet for Moosa Nayem Portfolio
   ========================================================================== */

/* Reset & Base Styles
   ========================================================================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* CSS Variables - Easy to customize colors
   ========================================================================== */
:root {
    /* Light theme with hacker green accents */
    --primary-green: #00a832;
    --dark-green: #006620;
    --light-green: #e8f5e9;
    --accent-cyan: #00acc1;
    --bg-white: #ffffff;
    --bg-light: #f8f9fa;
    --text-dark: #1a1a1a;
    --text-gray: #4a4a4a;
    --border-light: #e0e0e0;
    --shadow: rgba(0, 168, 50, 0.1);
    --shadow-hover: rgba(0, 168, 50, 0.2);
    
    /* Spacing */
    --spacing-xs: 8px;
    --spacing-sm: 16px;
    --spacing-md: 24px;
    --spacing-lg: 40px;
    --spacing-xl: 60px;
    
    /* Typography */
    --font-mono: 'JetBrains Mono', 'Space Mono', 'IBM Plex Mono', monospace;
    --font-size-base: 16px;
    --line-height: 1.6;
    
    /* Layout */
    --container-max: 1200px;
    --border-radius: 8px;
}

/* Dark Theme (optional - can be toggled)
   ========================================================================== */
body.dark-theme {
    --primary-green: #00ff41;
    --dark-green: #008f11;
    --light-green: #001a00;
    --accent-cyan: #00ffff;
    --bg-white: #0a0a0a;
    --bg-light: #141414;
    --text-dark: #e0e0e0;
    --text-gray: #a0a0a0;
    --border-light: #2a2a2a;
    --shadow: rgba(0, 255, 65, 0.2);
    --shadow-hover: rgba(0, 255, 65, 0.4);
}

/* Body & Typography
   ========================================================================== */
body {
    background: var(--bg-light);
    color: var(--text-dark);
    font-family: var(--font-mono);
    font-size: var(--font-size-base);
    line-height: var(--line-height);
    overflow-x: hidden;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
}

h1 { font-size: 48px; }
h2 { font-size: 32px; }
h3 { font-size: 24px; }
h4 { font-size: 20px; }
h5 { font-size: 18px; }
h6 { font-size: 16px; }

p {
    margin-bottom: var(--spacing-sm);
}

a {
    color: var(--primary-green);
    text-decoration: none;
    transition: all 0.3s ease;
}

a:hover {
    color: var(--dark-green);
}

/* Matrix Grid Background
   ========================================================================== */
.matrix-grid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0.08;
    pointer-events: none;
}

.grid-row {
    display: flex;
    width: 200%;
    animation: scrollGrid 20s linear infinite;
}

.grid-row.reverse {
    animation: scrollGridReverse 25s linear infinite;
}

.grid-cell {
    width: 50px;
    height: 50px;
    border: 1px solid var(--primary-green);
    flex-shrink: 0;
    position: relative;
    transition: all 0.3s ease;
}

.grid-cell::before {
    content: attr(data-char);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--primary-green);
    font-size: 20px;
    opacity: 0;
    animation: flicker 3s infinite;
}

@keyframes scrollGrid {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}

@keyframes scrollGridReverse {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
}

@keyframes flicker {
    0%, 100% { opacity: 0; }
    50% { opacity: 0.3; }
}

/* Navigation Bar
   ========================================================================== */
.site-nav {
    position: sticky;
    top: 0;
    background: var(--bg-white);
    border-bottom: 2px solid var(--primary-green);
    z-index: 100;
    box-shadow: 0 2px 10px var(--shadow);
}

.nav-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--spacing-sm) var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-logo {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-dark);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.nav-prompt {
    color: var(--primary-green);
}

.nav-links {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
}

.nav-link {
    color: var(--text-gray);
    font-weight: 500;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    transition: all 0.3s ease;
}

.nav-link:hover {
    background: var(--light-green);
    color: var(--dark-green);
}

.nav-link.active {
    color: var(--primary-green);
    background: var(--light-green);
}

.nav-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
}

.nav-toggle span {
    width: 25px;
    height: 2px;
    background: var(--primary-green);
    transition: all 0.3s ease;
}

/* Main Content Area
   ========================================================================== */
.site-content {
    flex: 1;
    position: relative;
    z-index: 10;
}

.container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--spacing-lg) var(--spacing-md);
}

/* Cards & Panels
   ========================================================================== */
.card {
    background: var(--bg-white);
    border: 2px solid var(--border-light);
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
    transition: all 0.3s ease;
}

.card:hover {
    border-color: var(--primary-green);
    box-shadow: 0 8px 30px var(--shadow-hover);
}

/* Terminal Styling
   ========================================================================== */
.terminal {
    background: var(--bg-white);
    border: 2px solid var(--primary-green);
    border-radius: var(--border-radius);
    box-shadow: 0 4px 20px var(--shadow);
}

.terminal-header {
    background: var(--light-green);
    padding: var(--spacing-sm);
    border-bottom: 2px solid var(--primary-green);
    border-radius: var(--border-radius) var(--border-radius) 0 0;
}

.terminal-prompt {
    color: var(--dark-green);
    font-size: 14px;
    font-weight: 600;
}

.terminal-prompt::before {
    content: "$ ";
    color: var(--primary-green);
}

.terminal-content {
    padding: var(--spacing-lg);
}

/* Buttons
   ========================================================================== */
.btn {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--primary-green);
    color: var(--bg-white);
    border: 2px solid var(--primary-green);
    border-radius: 4px;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn:hover {
    background: transparent;
    color: var(--primary-green);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px var(--shadow);
}

.btn-secondary {
    background: transparent;
    color: var(--primary-green);
}

.btn-secondary:hover {
    background: var(--primary-green);
    color: var(--bg-white);
}

/* Status Pills
   ========================================================================== */
.pill {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    background: var(--light-green);
    color: var(--dark-green);
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    border: 1px solid var(--primary-green);
}

.pill-dot {
    width: 8px;
    height: 8px;
    background: var(--primary-green);
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* Typing Effect */
.typing-effect {
    position: relative;
}

.typing-effect::after {
    content: '_';
    animation: blink 1s infinite;
    color: var(--primary-green);
}

@keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
}

/* Footer
   ========================================================================== */
.site-footer {
    background: var(--bg-white);
    border-top: 2px solid var(--primary-green);
    margin-top: var(--spacing-xl);
    position: relative;
    z-index: 10;
}

.footer-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--spacing-lg) var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
}

.footer-content {
    text-align: center;
    flex: 1;
}

.footer-command {
    font-family: var(--font-mono);
    background: var(--bg-light);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    display: inline-block;
    border: 1px solid var(--border-light);
    margin-top: var(--spacing-xs);
    font-size: 14px;
}

.footer-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
}

.footer-link {
    color: var(--text-gray);
    font-weight: 500;
    position: relative;
}

.footer-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary-green);
    transition: width 0.3s ease;
}

.footer-link:hover::after {
    width: 100%;
}

/* Achievement Badge (for easter eggs) */
.achievement-badge {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: var(--primary-green);
    color: white;
    padding: 10px 20px;
    border-radius: 20px;
    font-weight: bold;
    z-index: 9999;
    animation: slide-in 0.5s ease;
}

@keyframes slide-in {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes matrix-flash {
    0%, 100% { filter: hue-rotate(0deg); }
    50% { filter: hue-rotate(180deg); }
}

/* Accessibility
   ========================================================================== */
:focus {
    outline: 3px solid var(--primary-green);
    outline-offset: 2px;
}

.visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Responsive Design
   ========================================================================== */
@media (max-width: 768px) {
    h1 { font-size: 32px; }
    h2 { font-size: 24px; }
    h3 { font-size: 20px; }
    
    .nav-links {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: var(--bg-white);
        flex-direction: column;
        padding: var(--spacing-md);
        border-bottom: 2px solid var(--primary-green);
        box-shadow: 0 4px 10px var(--shadow);
    }
    
    .nav-links.active {
        display: flex;
    }
    
    .nav-toggle {
        display: flex;
    }
    
    .nav-toggle.active span:nth-child(1) {
        transform: rotate(45deg) translateY(8px);
    }
    
    .nav-toggle.active span:nth-child(2) {
        opacity: 0;
    }
    
    .nav-toggle.active span:nth-child(3) {
        transform: rotate(-45deg) translateY(-8px);
    }
    
    .footer-container {
        flex-direction: column;
        text-align: center;
    }
}

@media (max-width: 480px) {
    .container {
        padding: var(--spacing-md) var(--spacing-sm);
    }
    
    .card {
        padding: var(--spacing-md);
    }
}

/* Print Styles
   ========================================================================== */
@media print {
    .matrix-grid,
    .site-nav,
    .site-footer,
    .nav-toggle {
        display: none;
    }
    
    body {
        background: white;
        color: black;
    }
    
    a {
        color: black;
        text-decoration: underline;
    }
    
    .card {
        box-shadow: none;
        border: 1px solid #ddd;
    }
}
